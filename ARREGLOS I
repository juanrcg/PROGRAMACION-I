int[] arr = new int[10];
int max = int.MinValue;
int maxIndex = 0;

for (int i = 0; i < arr.Length; i++)
{
    Console.Write("Ingrese el entero {0}: ", i+1);
    arr[i] = int.Parse(Console.ReadLine());

    if (arr[i] > max)
    {
        max = arr[i];
        maxIndex = i;
    }
}

Console.WriteLine("El mayor número leído es {0} y se encuentra en la posición {1}.", max, maxIndex);
